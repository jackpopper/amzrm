aram.xy is 'x' : %><div style="margin:5px 0;clear:left;"><% end %><% end %><% else : %><div style="font-size:small;">ランキングを取得できませんでした</div><% end %><% if @param.xy is 'x' : %><div style="text-align:left;margin:0 5px;clear:left;"><% else : %><div style="text-align:right;margin:0 5px;"><% end %><span style="color:gray;">Powerd by </span><a href="http://amzrm.com/" target="_blank">amzrm</a></div></div><% if @param.fmt is 'js' : %>')<% else : %></body></html><% end %>
